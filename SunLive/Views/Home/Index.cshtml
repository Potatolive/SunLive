@model IEnumerable<SunLive.Models.FanPost>
@{
}



<div class="pull-right">
    <form class="form-inline">
       
        <div class="form-group">
            <label for="search"></label>
            <input type="email" class="form-control" id="search" placeholder="Enter a Hashtag here">
        </div>
        <button type="submit" class="btn btn-default">Search</button>
    </form>
</div>

<br />
<br />
<br />
<div class="clear-fix clearfix"></div>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@item.ImageURL"
                     alt="100%x200" class="imageTile"
                     data-holder-rendered="true">
                <div class="caption">
                    <p class="pull-left">
                        <small>@Html.DisplayFor(modelItem => item.HashTag)</small>
                        <br />
                        <small>@Html.DisplayFor(modelItem => item.PublishedOn)</small>
                    </p>
                <p class="pull-right">
                    <br />
                    -@Html.DisplayFor(modelItem => item.PublishedBy)
                </p>
                <p class="clearfix"></p>

                <div class="newsSummary">
                    @Html.Raw(item.TextContent)
                </div>
                    <br />
                <p>
                    @Html.ActionLink("Approve", "Details", new { id = item.PostId }, new { @class = "btn btn-primary" }) *
                    @Html.ActionLink("Edit", "Edit", new { id = item.PostId }, new { @class = "btn btn-warning " }) *
                    @Html.ActionLink("Delete", "Delete", new { id = item.PostId }, new { @class = "btn btn-danger " })
                </p>
            </div>
        </div>
    </div>
    }
</div>
